<div class="container">
  <%= render 'shared/errors'%>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-danger rounded",local: true)  do |f| %>

        <div class="form-group row">
          <%= f.label :title ,class: "col-2 col-form-label "%>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control shadow rounded" , placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description ,class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10,  class:"form-control shadow rounded", placeholder: "Description of article"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light" %>
        </div>

      <% end%>
    </div>

  </div>

  <div class="row justify-content-center mb-3">
    <%= link_to '[ Cancel and return to articles ]', articles_path ,class: "text-danger justify-content-center"%>
  </div>

</div>
